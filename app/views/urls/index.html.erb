<p id="notice"><%= notice %></p>

<h1>Urls</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.url %></td>
        <td><%= link_to 'Show', url, class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Edit', edit_url_path(url), class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Destroy', url, class: "btn btn-danger", role: "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path %>
