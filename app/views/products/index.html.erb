<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Customer review</th>
      <th>Customer review count</th>
      <th>Shipping message</th>
      <th>Asin</th>
      <th>Image</th>
      <th>Url</th>
      <th>Is prime</th>
      <th>Sponsored ad</th>
      <th>Coupon info</th>
      <th>Badges info</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.customer_review %></td>
        <td><%= product.customer_review_count %></td>
        <td><%= product.shipping_message %></td>
        <td><%= product.asin %></td>
        <td><%= product.image %></td>
        <td><%= product.url %></td>
        <td><%= product.is_prime %></td>
        <td><%= product.sponsored_ad %></td>
        <td><%= product.coupon_info %></td>
        <td><%= product.badges_info %></td>
        <td><%= product.url %></td>
        <td><%= link_to 'Show', product,class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary", role: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

